<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/drawer" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_29sdp">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view_8"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_35sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                android:layout_marginEnd="5.0dp"
                app:lottie_rawRes="@raw/premium" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go Premium"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginStart="@dimen/_30sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/vault" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_10sdp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_30sdp">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/privacypolicy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_10sdp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/support" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP  Customer Support"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_10sdp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rateus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_30sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_10sdp" />
    </LinearLayout>
    </LinearLayout>